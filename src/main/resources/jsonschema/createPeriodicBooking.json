{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "booking_reason": {
      "type": "string"
    },
    "start_date": {
      "type": "integer"
    },
    "end_date": {
      "type": "integer"
    },
    "periodic_end_date": {
      "type": "integer"
    },
    "periodicity": {
      "type": "integer",
      "minimum": 1
    },
    "occurrences": {
      "type": "integer",
      "minimum": 1
    },
	"days": {
	      "description": "Array of booleans, representing selected days. Index 0 corresponds to Sunday, index 1 to Monday, etc",
	      "type": "array",
	      "additionalProperties": false,
	      "items": [
	        {
	          "id": "#0",
	          "type": "boolean"
	        },
	        {
	          "id": "#1",
	          "type": "boolean"
	        },
	        {
	          "id": "#2",
	          "type": "boolean"
	        },
	        {
	          "id": "#3",
	          "type": "boolean"
	        },
	        {
	          "id": "#4",
	          "type": "boolean"
	        },
	        {
	          "id": "#5",
	          "type": "boolean"
	        },
	        {
	          "id": "#6",
	          "type": "boolean"
	        }
	      ],
	      "required": [
	        "0",
	        "1",
	        "2",
	        "3",
	        "4",
	        "5",
	        "6"
	      ]
	    }
  },
  "required": [
    "start_date",
    "end_date",
    "periodicity",
    "days"
  ]
}